<style>

@import url('https://fonts.googleapis.com/css?family=Barlow');

body{
  padding: 50px;
  background-color:#003471;
}
  #header{
  font-family: Barlow', sans-serif;
  color: #FBFFB0;
  padding-left: 30%;
}
.button{
  position: relative;
  padding: 5px 20px;
  margin: 0px 10px 10px 0px;
  font-family:Barlow, sans-serif;
  float: left;
  border-radius: 10px;
  font-size: 12px;
  color: #FFF;
  text-decoration: none;
}

.button{
  background-color: #3498DB;
  border-bottom: 5px solid #2980B9;
  text-shadow: 0px -2px #2980B9;
}

#container {
  max-width: 100px;
  min-width: 960px;
  position: relative;
  text-align:center;
  margin-top: 1.75em;
        margin-bottom: 2em;
        margin: auto;
  padding: 3em;
  border: 5px double #000000;
  border-color: #012148;
  background-color: #FBFFB0; 
  font-family: Barlow, sans-serif;
}


</style>

<div id="container">
<h3>Pacientes</h3>

<a class="button" href="/Paciente/Registrar"> Agregar Paciente </a>
<a class="button" href="/"> Regresar </a>
<br><br> <br>
<table>
  <tr>
  <th>ID</th>
  <th>Cedula</th>
  <th>Nombre</th>
  <th>Apellido</th>

  <th></th>
  <th></th>
  <th></th>
</tr>
<% _.each(paciente,function(paciente){ %>
  <tr data=id="<%= paciente.id %>" data-model="paciente">
  <td><%= paciente.id %></td>
  <td><%= paciente.cedula %></td>
  <td><%= paciente.nombre %></td>
  <td><%= paciente.apellido %></td>

  <td><a class="button" href="Paciente/show/<%= paciente.id %>">Mostrar</a></td>
  <td><a class="button" href="Paciente/edit/<%= paciente.id %>">Editar  </a></td>
  <td><a class="button" href="Paciente/destroy/<%= paciente.id %>">Eliminar</a></td>
</tr>
<% }) %>
</table>
</div>
